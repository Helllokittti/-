from math import sqrt
print 'Введите координаты первой вершины '
x1,y1=map(float,raw_input().split())
print 'Введите координаты второй вершины'
x2,y2=map(float,raw_input().split())
print 'Введите координаты третей вершины '
x3,y3=map(float,raw_input().split())
a=sqrt((x2-x1)**2+(y2-y1)**2)
b=sqrt((x3-x2)**2+(y3-y2)**2)
c=sqrt((x1-x3)**2+(y1-y3)**2)
p=(a+b+c)/2.0
s=sqrt(p*(p-a)*(p-b)*(p-c))
print 'Площадь',s,'Периметр',a+b+c
